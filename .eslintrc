{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
//    "airbnb"
  ],
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "rules": {
    "semi": [2, "always"],
    "quotes": [2, "single"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "object-curly-spacing": [2, "always"],
    "no-unused-vars": 1,
    "react/prop-types": 0,
    "react/jsx-max-props-per-line": [2, { "maximum": 1, "when": "multiline" }]
  }
}